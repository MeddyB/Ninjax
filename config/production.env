# Configuration de production
ENVIRONMENT=production

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION

# Service Configuration
SERVICE_NAME=AxiomTradeService
SERVICE_DISPLAY_NAME=Axiom Trade Service
SERVICE_DESCRIPTION=Service de gestion des tokens Axiom Trade

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/axiom_trade.log
LOG_MAX_BYTES=20971520
LOG_BACKUP_COUNT=10
LOG_ENABLE_METRICS=true
LOG_ENABLE_JSON=true
LOG_ROTATION_CLEANUP_DAYS=30

# Token Configuration
TOKEN_CACHE_FILE=data/tokens.json
TOKEN_REFRESH_INTERVAL=3600

# API Configuration
AXIOM_API_BASE_URL=https://api.axiomtrade.com
API_TIMEOUT=30

# Web Apps Configuration
TRADING_DASHBOARD_PORT=5001
BACKTESTING_APP_PORT=5002
AI_INSIGHTS_APP_PORT=5003
ADMIN_PANEL_PORT=5004