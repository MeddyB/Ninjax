# Configuration de développement
ENVIRONMENT=development

# Flask Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# Service Configuration
SERVICE_NAME=AxiomTradeService
SERVICE_DISPLAY_NAME=Axiom Trade Service (Development)
SERVICE_DESCRIPTION=Service de gestion des tokens Axiom Trade - Développement

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/axiom_trade_dev.log
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=3
LOG_ENABLE_METRICS=true
LOG_ENABLE_JSON=false
LOG_ROTATION_CLEANUP_DAYS=7

# Token Configuration
TOKEN_CACHE_FILE=data/tokens_dev.json
TOKEN_REFRESH_INTERVAL=1800

# API Configuration
AXIOM_API_BASE_URL=https://api.axiomtrade.com
API_TIMEOUT=30

# Web Apps Configuration
TRADING_DASHBOARD_PORT=5001
BACKTESTING_APP_PORT=5002
AI_INSIGHTS_APP_PORT=5003
ADMIN_PANEL_PORT=5004